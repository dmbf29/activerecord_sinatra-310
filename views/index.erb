<h1>Da Restaurants</h1>
<h4>Find da best restaurants. Dey gud.</h4>

<!-- action -> path method get/post -->
<form action="/restaurants" method="post">
  <label for="name">Name</label>
  <input type="text" name="name">
  <label for="address">Address</label>
  <input type="text" name="address">
  <input type="submit">
</form>

<%  %> <!-- runs code but doesnt display -->

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <p><a href="/restaurants/<%= restaurant.id %>"><%= restaurant.name %></a> | <%= restaurant.address %> | <%= "*" * restaurant.rating  %>
      </p>
    </li>
  <% end %>
</ul>
